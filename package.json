{
    "name": "ormolu-vscode",
    "displayName": "ormolu",
    "version": "0.0.8",
    "repository": {
        "type": "git",
        "url": "https://github.com/mariatsji/ormolu-vscode"
    },
    "icon": "images/icon.png",
    "description": "VS Code extension for Haskell code formatting based on ormolu tool",
    "engines": {
        "vscode": "^1.39.2"
    },
    "categories": [
        "Formatters"
    ],
    "activationEvents": [
        "onLanguage:haskell"
    ],
    "contributes": {
        "languages": [
            {
                "id": "haskell"
            }
        ],
        "configuration": {
            "title": "Ormolu",
            "type": "object",
            "properties": {
                "ormolu.notifyOnParseError": {
                    "type": "boolean",
                    "default": false,
                    "description": "If set to true, notify you every time ormolu fails to parse a file"
                },
                "ormolu.path": {
                    "type": "string",
                    "default": "ormolu",
                    "description": "Path to the ormolu executable."
                },
                "ormolu.args": {
                    "type": "array",
                    "default": [],
                    "description": "Additional arguments to pass to ormolu."
                }
            }
        }
    },
    "scripts": {
        "compile": "tsc",
        "postinstall": "node ./node_modules/vscode/bin/install && tsc"
    },
    "devDependencies": {
        "@types/node": "*",
        "typescript": "3.9.7",
        "vscode": "^1.1.37"
    },
    "main": "./out/src/extension",
    "author": "Sjur Millidahl",
    "publisher": "sjurmillidahl",
    "license": "MIT",
    "private": false
}